<Plugin ceph>
  <%- if @longrunavglatency -%>
  LongRunAvgLatency true
  <%- else -%>
  LongRunAvgLatency false
  <%- end -%>
  <%- if @convertspecialmetrictypes -%>
  ConvertSpecialMetricTypes true
  <%- else -%>
  ConvertSpecialMetricTypes false
  <%- end -%>

<% @osds.each do |osd| -%>
  <Daemon "<%= osd %>">
    SocketPath "/var/run/ceph/ceph-<%= osd %>.asok"
  </Daemon>
<% end -%>

</Plugin>
